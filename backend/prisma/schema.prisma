generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Bio {
  id          Int    @id @default(autoincrement())
  dp          String
  name        String
  intro       String
  description String
}

model Skills {
  id               Int               @id @default(autoincrement())
  programmingLangs ProgrammingLang[] @relation("SkillToProgrammingLang")
  tools            Tools[]           @relation("SkillToTools")
  databases        Databases[]       @relation("SkillToDatabases")
}

model ProgrammingLang {
  id           Int     @id @default(autoincrement())
  languageName String  @unique
  skills       Skills? @relation("SkillToProgrammingLang", fields: [skillId], references: [id])
  skillId      Int?
}

model Tools {
  id       Int     @id @default(autoincrement())
  toolName String  @unique
  skills   Skills? @relation("SkillToTools", fields: [skillId], references: [id])
  skillId  Int?
}

model Databases {
  id           Int     @id @default(autoincrement())
  databaseName String  @unique
  skills       Skills? @relation("SkillToDatabases", fields: [skillId], references: [id])
  skillId      Int?
}
