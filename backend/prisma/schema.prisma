generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Bio {
  id          Int    @id @default(autoincrement())
  dp          String
  name        String
  intro       String
  description String
}

model ProgrammingLang {
  languageName String @unique
}

model Tool {
  toolName String @unique
}

model Database {
  databaseName String @unique
}

model Socials {
  id    Int    @id @default(autoincrement())
  title String @unique
  url   String
}

model Contacts {
  id           Int    @id @default(autoincrement())
  contactType  String @unique
  contactValue String
}

model Resume {
  id         Int    @id @default(1)
  resumeFile String
}

model Project {
  id          Int      @id @default(autoincrement())
  image       String
  title       String   @unique
  description String
  repoUrl     String
  liveUrl     String
  SkillsUsed  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id               Int      @id @default(autoincrement())
  title            String
  company          String   @unique
  responsibilities String
  from             String
  to               String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
